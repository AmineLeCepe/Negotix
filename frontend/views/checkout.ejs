<%- include('partials/header') %>
<link rel="stylesheet" href="/css/checkout.css">
<link rel="stylesheet" href="/css/index.css">
<div class="checkout-container">
  <div class="checkout-main">
    <h2 class="checkout-title">Check<span>out</span></h2>
    <div class="decorative-line"></div>
    <!-- Checkout steps removed -->
    <div class="checkout-content">
      <div class="order-list">
        <!-- Example product card -->
        <div class="order-card green">
          <img src="/assets/shoes.webp" alt="Nike Vomero 18" class="order-img">
          <div class="order-details">
            <h3>Nike Vomero 18</h3>
            <ul>
              <li>Men's Street Running Shoes</li>
              <li>Electric Green</li>
              <li>Size: 42</li>
            </ul>
            <ul>
              <li>Credit Card/Cash</li>
              <li>Office/Address</li>
            </ul>
          </div>
          <div class="order-price">3000 DA</div>
        </div>
        <div class="order-card blue">
          <img src="/assets/shoes1.webp" alt="Nike Pegasus 41" class="order-img">
          <div class="order-details">
            <h3>Nike Pegasus 41</h3>
            <ul>
              <li>Running shoes for kids (street)</li>
              <li>Midnight Navy</li>
              <li>Size: 36</li>
            </ul>
            <ul>
              <li>Cash</li>
              <li>Adress Only</li>
            </ul>
          </div>
          <div class="order-price">4000 DA</div>
        </div>
        <div class="order-card red">
          <img src="/assets/shoes2.webp" alt="Nike Zoom Fly 6 Pre." class="order-img">
          <div class="order-details">
            <h3>Nike Zoom Fly 6 Pre.</h3>
            <ul>
              <li>Men's running shoes (street)</li>
              <li>White</li>
              <li>Size: 39</li>
            </ul>
            <ul>
              <li>Credit Card Only</li>
              <li>Address Only</li>
            </ul>
          </div>
          <div class="order-price">2000 DA</div>
        </div>
        <a href="/listings" class="btn animate-fadeInUp delay-600 shine-effect" style="background: linear-gradient(90deg, #4B0082, #8A2BE2); color: #fff; font-size: 1.1rem; padding: 1rem 2.5rem; margin-top: 1rem; display: inline-block; text-align: center;">Back to Listings</a>
      </div>
      <div class="checkout-side">
        <div class="shipping-address">
          <h4>Shipping Address</h4>
          <div id="address-list">
            <label><input type="radio" name="address" checked> Annaba, Algeria</label>
            <label><input type="radio" name="address"> El Kala, Algeria</label>
          </div>
          <button class="add-address" id="add-address-btn">Add</button>
        </div>
        
        <!-- Address Input Modal -->
        <div id="address-modal">
          <div class="modal-content">
            <h3 class="modal-title">Add New Address</h3>
            <input type="text" id="new-address-input" class="address-input" placeholder="Enter your address">
            <div class="modal-actions">
              <button id="cancel-address" class="cancel-btn">Cancel</button>
              <button id="save-address" class="save-btn">Save</button>
            </div>
          </div>
        </div>
        <div class="summary-box">
          <h4>Summery</h4>
          <div class="summary-row"><span>Subtotal</span><span>9000 DA</span></div>
          <div class="summary-row"><span>Shipping</span><span>Free</span></div>
          <div class="summary-row"><span>Fee</span><span>500 DA</span></div>
          <div class="summary-row total"><span>Total</span><span>9500 DA</span></div>
          <p class="terms">By completing your purchase you agree to these <a href="/terms">Terms of Service</a>.</p>
          <button class="pay-btn">Pay</button>
          
          <!-- Payment Success Message -->
          <div id="payment-success">
            <div class="success-content">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path><polyline points="22 4 12 14.01 9 11.01"></polyline></svg>
              <span>Payment Successful!</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include('partials/footer') %>
<script src="/js/checkout.js"></script>