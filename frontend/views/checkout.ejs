<%- include('partials/header') %>
<link rel="stylesheet" href="/css/checkout.css">
<div class="checkout-container">
  <div class="checkout-main">
    <h2 class="checkout-title">Order</h2>
    <div class="checkout-steps">
      <span class="step active">ðŸ›’</span>
      <span class="step">Checkout</span>
      <span class="step">Confirm</span>
    </div>
    <div class="checkout-content">
      <div class="order-list">
        <!-- Example product card -->
        <div class="order-card green">
          <img src="/assets/shoes.webp" alt="Nike Vomero 18" class="order-img">
          <div class="order-details">
            <h3>Nike Vomero 18</h3>
            <ul>
              <li>Men's Street Running Shoes</li>
              <li>Electric Green</li>
              <li>Size: 42</li>
            </ul>
            <ul>
              <li>Credit Card/Cash</li>
              <li>Office/Address</li>
            </ul>
          </div>
          <div class="order-price">3000 DA</div>
        </div>
        <div class="order-card blue">
          <img src="/assets/shoes1.webp" alt="Nike Pegasus 41" class="order-img">
          <div class="order-details">
            <h3>Nike Pegasus 41</h3>
            <ul>
              <li>Running shoes for kids (street)</li>
              <li>Midnight Navy</li>
              <li>Size: 36</li>
            </ul>
            <ul>
              <li>Cash</li>
              <li>Adress Only</li>
            </ul>
          </div>
          <div class="order-price">4000 DA</div>
        </div>
        <div class="order-card red">
          <img src="/assets/shoes2.webp" alt="Nike Zoom Fly 6 Pre." class="order-img">
          <div class="order-details">
            <h3>Nike Zoom Fly 6 Pre.</h3>
            <ul>
              <li>Men's running shoes (street)</li>
              <li>White</li>
              <li>Size: 39</li>
            </ul>
            <ul>
              <li>Credit Card Only</li>
              <li>Address Only</li>
            </ul>
          </div>
          <div class="order-price">2000 DA</div>
        </div>
        <a href="/store" class="back-to-store">Back to Store</a>
      </div>
      <div class="checkout-side">
        <div class="shipping-address">
          <h4>Shipping Address</h4>
          <label><input type="radio" name="address" checked> Annaba, Algeria</label>
          <label><input type="radio" name="address"> El Kala, Algeria</label>
          <button class="add-address">Add</button>
        </div>
        <div class="summary-box">
          <h4>Summery</h4>
          <div class="summary-row"><span>Subtotal</span><span>9000 DA</span></div>
          <div class="summary-row"><span>Shipping</span><span>Free</span></div>
          <div class="summary-row"><span>Fee</span><span>500 DA</span></div>
          <div class="summary-row total"><span>Total</span><span>9500 DA</span></div>
          <p class="terms">By completing your purchase you agree to these <a href="/terms">Terms of Service</a>.</p>
          <button class="pay-btn">Pay</button>
        </div>
      </div>
    </div>
  </div>
</div>
