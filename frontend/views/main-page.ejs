<%- include('partials/header') %>
<link rel="stylesheet" href="/css/style.css">
<link rel="stylesheet" href="/css/contact.css">
<link rel="stylesheet" href="/css/index.css">

<main>
  <!-- Home Section -->
  <section id="home" class="hero-section">
    <!-- Animated background with parallax effect -->
    <div>
      <img src="/assets/purple backgroud-main page.png" alt="Background" class="animate-float">
      <!-- Overlay gradient for better text readability -->
      <div></div>
      <!-- Particle effect overlay -->
      <div class="particle-overlay animate-pulse"></div>
    </div>
    
    <!-- Logo with glow effect -->
    <img src="/assets/logo 1.png" alt="Negotix Logo" style="position: absolute; top: 2rem; left: 2rem; width: 70px; z-index: 1; filter: drop-shadow(0 0 10px rgba(108, 240, 226, 0.5));" class="animate-fadeInUp">
    
    <!-- Main headline with modern typography -->
    <div style="position: relative; z-index: 3; max-width: 800px; padding: 0 2rem;">
      <h1 style="font-size: 3.5rem; font-weight: 800; line-height: 1.2; margin: 0 0 1.5rem; text-shadow: 0 5px 15px rgba(0,0,0,0.3);" class="animate-fadeInUp delay-200 fade-in-text">Welcome to <span style="background: linear-gradient(90deg, #00e6e6, #4de2cf); background-clip: text; -webkit-background-clip: text; -webkit-text-fill-color: transparent;">Negotix</span><br>your go-to destination<br>for thrilling auction<br>and unbeatable deals!</h1>
      
      <p style="font-size: 1.2rem; margin-bottom: 2rem; opacity: 0.9; max-width: 600px; margin-left: auto; margin-right: auto; text-shadow: 0 2px 5px rgba(0,0,0,0.2);" class="animate-fadeInUp delay-300 fade-in-text">Join thousands of satisfied customers who find amazing deals through our innovative bidding platform.</p>
      
      <!-- CTA button with shine effect -->
      <a href="#about" class="btn animate-fadeInUp delay-400 shine-effect" style="background: linear-gradient(90deg, #6cf0e2, #4de2cf); color: #222; font-size: 1.1rem; text-transform: uppercase; letter-spacing: 1px; z-index: 1;">JOIN US</a>
    </div>
    
    <!-- Floating elements with enhanced animations -->
    <img src="/assets/delivery_guy.png" alt="Delivery Guy" style="position: absolute; right: 10%; top: 10%; width: 200px; z-index: 1; filter: drop-shadow(0 10px 20px rgba(0,0,0,0.3));" class="animate-slideInTop animate-float" onanimationend="this.classList.add('animate-float')">
    <img src="/assets/girl shop-main page.png" alt="Shopper" style="position: absolute; right: 5%; bottom: 5%; width: 200px; z-index: 1; filter: drop-shadow(0 10px 20px rgba(0,0,0,0.3));" class="animate-slideInRight animate-float" onanimationend="this.classList.add('animate-float')">
    <img src="/assets/card1-main page.webp" alt="Card" style="position: absolute; left: 5%; top: 20%; width: 140px; z-index: 1; filter: drop-shadow(0 10px 15px rgba(0,0,0,0.2)); transform: rotate(-10deg);" class="animate-slideInBottom animate-float" onanimationend="this.classList.add('animate-float')">
    <img src="/assets/card2-main page.webp" alt="Card" style="position: absolute; left: 10%; bottom: 15%; width: 140px; z-index: 1; filter: drop-shadow(0 10px 15px rgba(0,0,0,0.2)); transform: rotate(5deg);" class="animate-slideInBottom animate-float delay-300" onanimationend="this.classList.add('animate-float')">
    
    <!-- Scroll indicator -->
    <div style="position: absolute; bottom: 2rem; left: 50%; transform: translateX(-50%); z-index: 3;" class="animate-fadeInUp delay-800 animate-pulse">
      <svg width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="#fff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M7 13l5 5 5-5"></path>
        <path d="M7 7l5 5 5-5"></path>
      </svg>
    </div>
  </section>

  <!-- About Section -->
  <section id="about" class="about-section" style="background: linear-gradient(120deg, #e0c3fc 0%, #8ec5fc 100%); min-height: 100vh; width: 100%; display: flex; align-items: center; justify-content: center; position: relative; overflow: hidden; padding: 8rem 0;">
    <!-- Animated background elements -->
    <div style="position: absolute; inset: 0; background-image: url('/assets/grid-pattern.png'); background-size: 30px; opacity: 0.05; z-index: 0;"></div>
    
    <!-- Left floating people image with enhanced effects -->
    <img src="/assets/people-about-page.png" alt="About People Left" style="position: absolute; left: 0; bottom: 0; width: 280px; max-width: 25vw; z-index: 1; filter: drop-shadow(0 10px 20px rgba(0,0,0,0.15)); border-radius: 8px;" class="animate-slideInLeft animate-float" onanimationend="this.classList.add('animate-float')">
    
    <!-- Right floating echec girl image with enhanced effects -->
    <img src="/assets/echec_girl.webp" alt="Echec Girl" style="position: absolute; right: 0; top: 0; width: 280px; max-width: 25vw; z-index: 1; filter: drop-shadow(0 10px 20px rgba(0,0,0,0.15)); border-radius: 8px;" class="animate-slideInRight animate-float delay-200" onanimationend="this.classList.add('animate-float')">
    <div style="flex: 1; display: flex; flex-direction: column; align-items: center; justify-content: center; z-index: 2; margin: 0 340px; max-width: 1200px; padding: 0 2rem;">
      <!-- Section title with modern styling -->
      <h2 class="section-title animate-fadeInUp fade-in-text" style="color: #222;">About <span style="background: linear-gradient(90deg, #4B0082, #8A2BE2); background-clip: text; -webkit-background-clip: text; -webkit-text-fill-color: transparent; color: #4B0082;">Negotix</span></h2>
      
      <!-- Decorative line -->
      <div style="height: 4px; width: 80px; margin: -0.5rem auto 2rem; border-radius: 2px; background: linear-gradient(90deg, #8ec5fc 0%, #4B0082 100%);" class="animate-fadeInUp delay-100 fade-in-text"></div>
      
      <!-- About text with improved typography -->
      <p style="font-size: 1.2rem; text-align: center; margin-bottom: 3rem; color: #333; line-height: 1.8; max-width: 800px;" class="animate-fadeInUp delay-200 fade-in-text">Negotix is a premier online auction platform where users can bid on a wide variety of products. Our mission is to provide a fair, transparent, and exciting bidding experience for all our users. With Negotix, you can find amazing deals on products from various categories.</p>
      
      
      <!-- Stats cards with enhanced visual design -->
      <div style="display: flex; justify-content: space-around; width: 100%; flex-wrap: wrap; gap: 3rem; margin-top: 3rem; margin-bottom: 2rem;">
        <% const stats = [
          { number: '10K+', label: 'Active Users', icon: 'users' },
          { number: '5K+', label: 'Products Sold', icon: 'shopping-bag' },
          { number: '98%', label: 'Satisfaction Rate', icon: 'star' }
        ] %>
        <% stats.forEach((stat, index) => { %>
          <div class="card animate-fadeInUp" data-delay="<%= index * 200 + 400 %>" style="text-align: center; padding: 2rem; min-width: 200px; background: rgba(255, 255, 255, 0.8); backdrop-filter: blur(10px);">
            <% if (stat.icon === 'users') { %>
              <svg width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="#4B0082" stroke-width="2" style="margin-bottom: 1rem;">
                <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                <circle cx="9" cy="7" r="4"></circle>
                <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
              </svg>
            <% } else if (stat.icon === 'shopping-bag') { %>
              <svg width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="#4B0082" stroke-width="2" style="margin-bottom: 1rem;">
                <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"></path>
                <line x1="3" y1="6" x2="21" y2="6"></line>
                <path d="M16 10a4 4 0 0 1-8 0"></path>
              </svg>
            <% } else if (stat.icon === 'star') { %>
              <svg width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="#4B0082" stroke-width="2" style="margin-bottom: 1rem;">
                <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>
              </svg>
            <% } %>
            <h3 style="font-size: 2.5rem; font-weight: 700; margin-bottom: 0.5rem; background: linear-gradient(90deg, #4B0082, #8A2BE2); background-clip: text; -webkit-background-clip: text; -webkit-text-fill-color: transparent; color: #4B0082;"><%= stat.number %></h3>
            <p style="font-size: 1.1rem; color: #555;"><%= stat.label %></p>
          </div>
        <% }) %>
      </div>
    </div>
  </section>
  
  <!-- Team Section -->
  <section id="team" class="team-section" style="background: linear-gradient(120deg, #f8f9fa 0%, #e9ecef 100%); min-height: 100vh; width: 100%; display: flex; align-items: center; justify-content: center; position: relative; overflow: hidden; padding: 8rem 0;">
    <!-- Animated background elements -->
    <div style="position: absolute; inset: 0; background-image: url('/assets/grid-pattern.png'); background-size: 30px; opacity: 0.05; z-index: 0;"></div>
    
    <div style="max-width: 1200px; margin: 0 auto; padding: 0 2rem; position: relative; z-index: 2;">
      <!-- Section title with modern styling -->
      <h2 class="section-title animate-fadeInUp fade-in-text" style="color: #222;">Our <span style="background: linear-gradient(90deg, #4B0082, #8A2BE2); background-clip: text; -webkit-background-clip: text; -webkit-text-fill-color: transparent; color: #4B0082;">Team</span></h2>
      
      <!-- Decorative line -->
      <div style="height: 4px; width: 80px; margin: -0.5rem auto 2rem; border-radius: 2px; background: linear-gradient(90deg, #8ec5fc 0%, #4B0082 100%);" class="animate-fadeInUp delay-100 fade-in-text"></div>
      
      <!-- Team description -->
      <p style="font-size: 1.2rem; text-align: center; margin-bottom: 4rem; color: #333; line-height: 1.8; max-width: 800px; margin-left: auto; margin-right: auto;" class="animate-fadeInUp delay-200 fade-in-text">At Negotix Team, we are on a mission to revolutionize the way you shop, offering a dynamic online bidding experience that lets you compete for incredible deals on exclusive products. We are an online bidding store founded by a team of passionate innovators dedicated to providing an exciting, transparent, and rewarding shopping experience for everyone.</p>
      
      <!-- Team members grid -->
      <div style="display: flex; flex-wrap: wrap; justify-content: center; gap: 4rem; margin-top: 4rem; margin-bottom: 2rem;">
        <% 
        const teamMembers = [
          { name: 'Amine', role: 'Backend Developer', image: '/assets/amine.png' },
          { name: 'Mouataz', role: 'Backend Developer', image: '/assets/mouataz.jpg' },
          { name: 'Nadia', role: 'Frontend Developer', image: '/assets/nadia.png' },
          { name: 'Iheb', role: 'Frontend Developer', image: '/assets/iheb.PNG' },
          { name: 'Mouez', role: 'Frontend Developer', image: '/assets/mouez.jpg' }
        ];
        %>
        
        <% teamMembers.forEach((member, index) => { %>
          <div class="animate-fadeInUp" data-delay="<%= index * 200 %>" style="text-align: center;">
            <div style="position: relative; width: 150px; height: 150px; margin: 0 auto; margin-bottom: 1.5rem;">
              <!-- Circular background with gradient border -->
              <div style="position: absolute; inset: 0; border-radius: 16px; background: linear-gradient(45deg, #4B0082, #8A2BE2); transform: rotate(45deg); z-index: 1;" class="animate-pulse"></div>
              
              <!-- Member image -->
              <img src="<%= member.image %>" alt="<%= member.name %>" style="position: relative; width: 130px; height: 130px; border-radius: 16px; object-fit: cover; margin: 10px; z-index: 2; background: #a9a3e6; filter: drop-shadow(0 10px 20px rgba(0,0,0,0.15));">
              
              <!-- Social media icons -->
              <div style="position: absolute; bottom: -10px; right: -10px; background: white; border-radius: 50%; width: 40px; height: 40px; display: flex; align-items: center; justify-content: center; box-shadow: 0 4px 10px rgba(0,0,0,0.1); z-index: 3;" class="animate-pulse">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="#4B0082" stroke-width="2">
                  <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path>
                  <rect x="2" y="9" width="4" height="12"></rect>
                  <circle cx="4" cy="4" r="2"></circle>
                </svg>
              </div>
            </div>
            
            <!-- Member name with gradient text -->
            <h3 style="font-size: 1.4rem; font-weight: 700; margin-bottom: 0.3rem; background: linear-gradient(90deg, #4B0082, #8A2BE2); background-clip: text; -webkit-background-clip: text; -webkit-text-fill-color: transparent; color: #4B0082;"><%= member.name %></h3>
            
            <!-- Member role -->
            <p style="font-size: 1rem; color: #555; font-weight: 500;"><%= member.role %></p>
          </div>
        <% }) %>
      </div>
    </div>
  </section>

  <!-- Livechat Section -->
  <section id="livechat" class="livechat-section" style="background: linear-gradient(120deg, #e0c3fc 0%, #8ec5fc 100%); min-height: 100vh; width: 100%; display: flex; align-items: center; justify-content: center; position: relative; overflow: hidden; padding: 8rem 0;">
    <!-- Enhanced circle background effect positioned behind the message guy -->
    <div style="position: absolute; right: 25%; top: 50%; transform: translate(50%, -50%); width: 600px; height: 600px; border-radius: 50%; background: radial-gradient(circle, rgba(108, 99, 255, 0.2) 0%, rgba(108, 99, 255, 0.1) 50%, transparent 70%); z-index: 0;" class="animate-pulse"></div>
    <div style="position: absolute; right: 25%; top: 50%; transform: translate(50%, -50%); width: 400px; height: 400px; border-radius: 50%; background: radial-gradient(circle, rgba(108, 99, 255, 0.3) 0%, rgba(108, 99, 255, 0.2) 50%, transparent 70%); z-index: 0;" class="animate-pulse"></div>
    <div style="display: flex; align-items: center; gap: 5rem; width: 100%; max-width: 1200px; position: relative; z-index: 1; padding: 0 2rem; margin: 4rem 0;">
      <div style="flex: 1;" class="animate-slideInLeft">
        <h2 style="font-size: 2.5rem; color: #222; margin-bottom: 1rem;" class="fade-in-text">Live Chat Bidding is Here!</h2>
        <p style="font-size: 1.1rem; color: #222; margin-bottom: 2rem;" class="fade-in-text delay-200">Place your bids in real time and never miss out on a great deal. Chat with sellers, negotiate, and win the best pricesâ€”all live! Start bidding now</p>
        <div style="display: flex; gap: 2rem; margin-bottom: 2rem;">
          <div class="animate-fadeInUp delay-200 fade-in-text" data-delay="200">
            <span style="font-size: 2rem; font-weight: bold; color: #222;">200K+</span><br>
            <span style="font-size: 1rem; color: #555;">Bids Won</span>
          </div>
          <div class="animate-fadeInUp delay-400 fade-in-text" data-delay="400">
            <span style="font-size: 2rem; font-weight: bold; color: #222;">2M+</span><br>
            <span style="font-size: 1rem; color: #555;">Chats in Last 2025</span>
          </div>
        </div>
      </div>
      <div style="flex: 1; position: relative; min-height: 550px;" class="animate-slideInRight">
        <!-- Much larger message guy -->
        <img src="/assets/msg_guy-live chat page.webp" alt="Chat Guy" style="width: 550px; margin: 0 auto; display: block; position: relative; z-index: 1; filter: drop-shadow(0 20px 40px rgba(0,0,0,0.25));" class="animate-float">
        
        <!-- Larger message bubbles positioned behind the message guy with floating animation -->
        <img src="/assets/message 1-live chat.png" alt="Message 1" style="position: absolute; left: -50px; top: 20%; width: 280px; z-index: 0; filter: drop-shadow(0 10px 20px rgba(0,0,0,0.15)); opacity: 0.9;" class="animate-float delay-200">
        <img src="/assets/message 2-live chat.png" alt="Message 2" style="position: absolute; right: -30px; top: 30%; width: 250px; z-index: 0; filter: drop-shadow(0 10px 20px rgba(0,0,0,0.15)); opacity: 0.9;" class="animate-float delay-600">
      </div>
    </div>
  </section>

  <!-- Trending Section -->
  <section id="trending" class="trending-section" style="background: url('/assets/top purple backgroud.png') top center/cover no-repeat; min-height: 80vh; width: 100%; color: #fff; padding: 6rem 0; overflow: hidden; position: relative;">
    <!-- Overlay for better readability -->
    <div style="position: absolute; inset: 0; background: linear-gradient(to bottom, rgba(46, 34, 90, 0.8), rgba(46, 34, 90, 0.9)); z-index: 1;"></div>
    
    <!-- Animated particles background -->
    <div style="position: absolute; inset: 0; background-image: url('/assets/particles.png'); background-size: cover; opacity: 0.1; z-index: 2;" class="animate-pulse"></div>
    
    <div style="max-width: 1200px; margin: 0 auto; padding: 0 2rem; position: relative; z-index: 3;">
      <!-- Section title with modern styling -->
      <h2 class="section-title animate-fadeInUp fade-in-text">Shop From <span style="background: linear-gradient(90deg, #00e6e6, #4de2cf); background-clip: text; -webkit-background-clip: text; -webkit-text-fill-color: transparent; color: #00e6e6;">Top Categories</span></h2>
      
      <!-- Decorative line -->
      <div style="height: 4px; width: 80px; margin: -0.5rem auto 3rem; border-radius: 2px; background: linear-gradient(90deg, #8ec5fc 0%, #00e6e6 100%);" class="animate-fadeInUp delay-100 fade-in-text"></div>
      
      <!-- Categories with premium styling -->
      <div style="display: flex; justify-content: center; gap: 2rem; flex-wrap: wrap; margin: 3rem 0 5rem;">
        <% 
        const categories = [
          { name: 'Electronics', icon: 'headset', color: 'linear-gradient(135deg, #6a11cb 0%, #2575fc 100%)' },
          { name: 'Clothing', icon: 'accessories', color: 'linear-gradient(135deg, #f83600 0%, #f9d423 100%)' },
          { name: 'Home', icon: 'furniture', color: 'linear-gradient(135deg, #00c6fb 0%, #005bea 100%)' },
          { name: 'Sports', icon: 'playstation', color: 'linear-gradient(135deg, #f093fb 0%, #f5576c 100%)' },
          { name: 'Beauty', icon: 'cosmetics', color: 'linear-gradient(135deg, #5ee7df 0%, #b490ca 100%)' },
          { name: 'Mobile', icon: 'mobile', color: 'linear-gradient(135deg, #43e97b 0%, #38f9d7 100%)' }
        ];
        %>
        <% categories.forEach((category, index) => { %>
          <a href="/listings" style="text-decoration: none; color: inherit;">
            <div style="text-align: center; animation-delay: <%= index * 100 %>ms;" class="animate-fadeInUp">
              <div style="width: 110px; height: 110px; border-radius: 24px; background: <%= category.color %>; display: flex; align-items: center; justify-content: center; margin: 0 auto; box-shadow: 0 15px 30px rgba(0,0,0,0.2); transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275); position: relative; overflow: hidden; cursor: pointer;" 
                   onmouseover="this.style.transform='translateY(-10px) scale(1.05)'; this.style.boxShadow='0 20px 40px rgba(0,0,0,0.3)';" 
                   onmouseout="this.style.transform='translateY(0) scale(1)'; this.style.boxShadow='0 15px 30px rgba(0,0,0,0.2)';">  
                <!-- Animated glow effect -->
                <div style="position: absolute; width: 150%; height: 150%; background: radial-gradient(circle, rgba(255,255,255,0.8) 0%, rgba(255,255,255,0) 70%); top: -25%; left: -25%; opacity: 0.1;" class="animate-pulse"></div>
                
                <img src="/assets/<%= category.icon %>.png" alt="<%= category.name %>" style="width: 60px; height: 60px; filter: drop-shadow(0 5px 15px rgba(0,0,0,0.2)); z-index: 1; transition: all 0.3s ease;" 
                     onmouseover="this.style.transform='scale(1.1)';" 
                     onmouseout="this.style.transform='scale(1)';">  
              </div>
              <div style="margin-top: 1.2rem; font-weight: 600; letter-spacing: 0.5px; font-size: 1.1rem; background: linear-gradient(90deg, #ffffff, #e0e0e0); background-clip: text; -webkit-background-clip: text; -webkit-text-fill-color: transparent; text-shadow: 0 2px 5px rgba(0,0,0,0.1);"><%= category.name %></div>
            </div>
          </a>
        <% }); %>
      </div>
      
      <!-- New Arrivals section with enhanced styling -->
      <h2 class="section-title animate-fadeInUp delay-200 fade-in-text" style="margin-top: 2rem;">New <span style="background: linear-gradient(90deg, #00e6e6, #4de2cf); background-clip: text; -webkit-background-clip: text; -webkit-text-fill-color: transparent; color: #00e6e6;">Arrivals</span></h2>
      
      <!-- Decorative line -->
      <div style="height: 4px; width: 80px; margin: -0.5rem auto 3rem; border-radius: 2px; background: linear-gradient(90deg, #8ec5fc 0%, #00e6e6 100%);" class="animate-fadeInUp delay-300 fade-in-text"></div>
      <div style="display: flex; gap: 2.5rem; justify-content: center; flex-wrap: wrap; margin-top: 1rem;">
        <% const products = locals.recentAuctions %>
        <% products.forEach((product, index) => { %>
          <div class="card animate-fadeInUp" data-delay="<%= index * 200 + 400 %>" style="background: rgba(20, 20, 30, 0.8); border-radius: 1.5rem; overflow: hidden; width: 340px; backdrop-filter: blur(5px); box-shadow: 0 15px 30px rgba(0,0,0,0.3); position: relative;">
            <!-- Ribbon for new products -->
            <div style="position: absolute; top: 20px; right: -30px; background: linear-gradient(90deg, #00e6e6, #4de2cf); color: #222; padding: 5px 30px; transform: rotate(45deg); font-weight: 600; font-size: 0.9rem; box-shadow: 0 2px 5px rgba(0,0,0,0.2); z-index: 2;">NEW</div>
            
            <!-- Product image with hover effect -->
            <div style="overflow: hidden; height: 220px; position: relative;">
              <img src="<%= product.image %>" alt="<%= product.title %>" style="width: 100%; height: 100%; object-fit: cover; transition: transform 0.5s ease;" onmouseover="this.style.transform='scale(1.1)'" onmouseout="this.style.transform='scale(1)'">
              <!-- Overlay gradient for better text readability -->
              <div style="position: absolute; bottom: 0; left: 0; right: 0; height: 80px; background: linear-gradient(to top, rgba(0,0,0,0.7), transparent); z-index: 1;"></div>
            </div>
            
            <div style="padding: 1.5rem;">
              <!-- Product title with gradient text -->
              <h3 style="margin-bottom: 0.8rem; font-size: 1.4rem; font-weight: 700;"><%= product.title %></h3>
              
              <!-- Product description -->
              <p style="font-size: 1rem; color: #bbb; margin-bottom: 1.5rem; line-height: 1.5;"><%= product.description %></p>
              
              <!-- Price and bid info -->
              <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1.5rem;">
                <div>
                  <span style="font-size: 0.9rem; color: #999;">Current Bid</span>
                  <div style="font-size: 1.4rem; font-weight: 700; color: #00e6e6;">$<%= Math.floor(Math.random() * 500) + 100 %></div>
                </div>
                <div style="text-align: right;">
                  <span style="font-size: 0.9rem; color: #999;">Ends in</span>
                  <div style="font-size: 1.1rem; font-weight: 600; color: #fff;"><%= Math.floor(Math.random() * 24) + 1 %>h <%= Math.floor(Math.random() * 60) %>m</div>
                </div>
              </div>
              
              <!-- Shop now button with shine effect -->
              <a href="/listings" class="btn shine-effect" style="background: linear-gradient(90deg, #6cf0e2, #4de2cf); color: #222; padding: 0.7rem 1.8rem; border-radius: 1rem; text-decoration: none; font-weight: 600; display: inline-block; width: 100%; text-align: center; text-transform: uppercase; letter-spacing: 1px; font-size: 0.9rem;">Bid Now</a>
            </div>
          </div>
        <% }); %>
      </div>
    </div>
