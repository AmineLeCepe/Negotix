<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact Us - Negotix</title>
    <link rel="stylesheet" href="/css/contact.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <!-- CSS moved to contact.css -->
</head>
<body>
    <!-- Top Navigation Bar -->
    <%- include('./partials/header') %>

    <div class="background-shapes">
        <div class="shape shape-1"></div>
        <div class="shape shape-2"></div>
        <div class="shape shape-3"></div>
        <div class="shape shape-4"></div>
        <div class="shape shape-5"></div>
        <div class="shape shape-6"></div>
    </div>

    <!-- Main Content -->
    <main class="main-content">
        <h1>Contact Us</h1>
        
        <div class="contact-container">
            <div class="contact-left">
                <div class="contact-method whatsapp">
                    <img src="/assets/whatsapp-logo.png" alt="WhatsApp">
                    <div class="contact-details">
                        <h3>WhatsApp</h3>
                        <p>+6285677770129</p>
                    </div>
                </div>
                <div class="contact-method email">
                    <img src="/assets/email-logo.png" alt="Email">
                    <div class="contact-details">
                        <h3>Email</h3>
                        <p>Team@negotix.com</p>
                    </div>
                </div>
            </div>
            
            <div class="contact-right">
                <form class="contact-form">
                    <input type="text" placeholder="Full Name" required>
                    <input type="email" placeholder="Email" required>
                    <div class="form-row">
                        <select name="support-type" required>
                            <option value="" disabled selected>Support Type</option>
                            <option value="general">General Inquiry</option>
                            <option value="technical">Technical Support</option>
                            <option value="billing">Billing Support</option>
                        </select>
                        <input type="text" placeholder="Order Number (Optional)">
                    </div>
                    <textarea placeholder="Leave your message here..." required></textarea>
                    <button type="submit" class="submit-btn">Send Message</button>
                </form>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <%- include('./partials/footer') %>

    <a href="#" class="back-to-top" id="backToTop">
        <i class="fas fa-arrow-up"></i>
    </a>

    <canvas id="particles"></canvas>

    <!-- JavaScript moved to contact.js -->

    <script src="/js/contact.js"></script>
</body>
</html>