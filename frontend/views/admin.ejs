                <% sellers.forEach(seller => { %>
                  <option value="<%= seller._id %>"><%= seller.name %></option>
                <% }); %>
              <% } %>
            </select>
          </div>
          
          <div class="form-group">
            <label for="auction-start-price">Starting Price (DA)</label>
            <input type="number" id="auction-start-price" name="startingPrice" min="0" required>
          </div>
          
          <div class="form-group">
            <label for="auction-reserve-price">Reserve Price (DA)</label>
            <input type="number" id="auction-reserve-price" name="reservePrice" min="0">
            <small class="form-hint">Optional. Minimum price for the auction to be considered successful</small>
          </div>
          
          <div class="form-group">
            <label for="auction-start-date">Start Date</label>
            <input type="datetime-local" id="auction-start-date" name="startDate" required>
          </div>
          
          <div class="form-group">
            <label for="auction-end-date">End Date</label>
            <input type="datetime-local" id="auction-end-date" name="endDate" required>
          </div>
          
          <div class="form-group">
            <label for="auction-min-bid-increment">Minimum Bid Increment (DA)</label>
            <input type="number" id="auction-min-bid-increment" name="minBidIncrement" min="1" value="10">
            <small class="form-hint">Minimum amount by which a new bid must exceed the current highest bid</small>
          </div>
          
          <div class="form-group">
            <label for="auction-status">Status</label>
            <select id="auction-status" name="status" required>
              <option value="pending">Pending</option>
              <option value="active">Active</option>
              <option value="completed">Completed</option>
              <option value="cancelled">Cancelled</option>
            </select>
          </div>
          
          <div class="form-group">
            <label for="auction-description">Description</label>
            <textarea id="auction-description" name="description" rows="4"></textarea>
          </div>
          
          <input type="hidden" id="auction-id" name="id">
          
          <div class="form-actions">
            <button type="button" class="cancel-btn">Cancel</button>
            <button type="submit" class="submit-btn">Save Auction</button>
          </div>
        </form>
      </div>
    </div>
  </div>
  
  <script src="/js/admin.js"></script>
</body>
</html>