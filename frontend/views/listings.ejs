<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Negotix - Listings</title>
    <link rel="stylesheet" href="/css/listings.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
<%- include('./partials/header') %>

<main class="container">
    <aside class="sidebar">
        <div class="categories">
            <h2>Categories</h2>
            <ul>
                <li><span>Electronics</span><span class="count">X</span></li>
                <li class="active"><span>Sport Equipments</span><span class="count">X</span></li>
                <li><span>Decor</span><span class="count">X</span></li>
                <li><span>Accessories</span><span class="count">X</span></li>
                <li><span>Mobile</span><span class="count">X</span></li>
                <li><span>Watches</span><span class="count">X</span></li>
                <li class="active"><span>Clothes</span><span class="count">X</span></li>
                <li><span>Cosmetics</span><span class="count">X</span></li>
                <li><span>Furnitures</span><span class="count">X</span></li>
                <li><span>Office</span><span class="count">X</span></li>
            </ul>
        </div>

        <div class="price-filter">
            <h2>Price</h2>
            <ul>
                <li><span>All</span><span class="count">X</span></li>
                <li><span>0DA - 1000DA</span><span class="count">X</span></li>
                <li class="active"><span>1000 DA - 9000DA</span><span class="count">X</span></li>
                <li><span>9000DA & Above</span><span class="count">X</span></li>
            </ul>
            <button class="reset-btn">Reset</button>
        </div>

        <div class="recently-added">
            <div class="header">
                <h2>Recently added</h2>
                <span class="more">...</span>
            </div>
            <p class="subtitle">X items have been added</p>
            <div class="recent-items">
                <div class="item">
                    <img src="assets/shoes1.webp" alt="Darius The Great">
                    <div class="item-info">
                        <h3>Darius The Great</h3>
                        <p>Price: 9000 DA</p>
                        <button class="bid-btn">Bid</button>
                    </div>
                </div>
                <div class="item">
                    <img src="assets/shoes2.webp" alt="Nike Airmax">
                    <div class="item-info">
                        <h3>Nike Airmax</h3>
                        <p>Price: 8000 DA</p>
                        <button class="bid-btn">Bid</button>
                    </div>
                </div>
            </div>
        </div>
    </aside>

    <section class="main-content">
        <div class="content-header">
            <div class="sort-dropdown">
                <select>
                    <option>Sort: Newest</option>
                    <option>Sort: Oldest</option>
                    <option>Sort: Price High to Low</option>
                    <option>Sort: Price Low to High</option>
                </select>
            </div>
            <span class="item-count">X Items</span>
        </div>

        <div class="products-grid" id="productsGrid">
            <% items.forEach(product =>  { %>
                <div class="product-card">
                    <img src="<%= product.image %>" alt="<%= product.name %>">
                    <div class="product-info">
                        <h3><%= product.name %></h3>
                        <div class="price">
                            <img src="assets/wish_list.webp" alt="Wishlist" style="width: 20px; height: 20px;">
                            <span><%= product.price %></span>
                        </div>
                        <div class="timer"><%= product.timeLeft %></div>
                        <button class="place-bid">Place Bid</button>
                    </div>
                </div>
            <% }); %>
        </div>

        <div class="pagination">
            <button class="active">1</button>
            <button>2</button>
            <button class="next">Next ></button>
        </div>
    </section>
</main>

<%- include('./partials/footer') %>

<script src="/js/listings.js"></script>
</body>
</html>